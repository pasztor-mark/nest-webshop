    <%-irszam%> />
    Város<input type="text" name="varos" placeholder="Város" value=
    <%-varos%> />
    Utca<input type="text" name="utca" placeholder="Fő utca" value=
    <%-utca%> />
    Házszám<input type="text" name="hazszam" placeholder="1" value=
    <%-hazszam%> />
    <hr>
    Kuponkód<input type="text" name="kupon" placeholder="XX-01234" value=
    <%-kupon%>>
    <hr>
    Bankkártyaszám <input type="text" name="kartyaszam" placeholder="XXXX-XXXX-XXXX-XXXX"
      pattern="^\d{4}-\d{4}-\d{4}-\d{4}$" />
    Lejárat <input type="text" name="lejarat" placeholder="01/25"
      " />
    CVC <input type="text" name="cvc" placeholder="111"
      " />
    <button type="submit">Fizetés</button>
  </form>
  
