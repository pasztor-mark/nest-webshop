      <option value="iPhone 16">iPhone 16</option>
      <option value="Galaxy S25">Galaxy S25</option>
      <option value="Nokia 3310">Nokia 3310</option>
    </select>
    Név<input type="text" name="nev" id="nev" placeholder="Nagy János"
    value=
    <%-nev%> />
